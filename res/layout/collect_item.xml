<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/collect_item_height"
    android:background="@drawable/bg_list_item_selector"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/item_number"
        android:layout_width="@dimen/collect_item_number_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:gravity="right"
        android:paddingTop="@dimen/collect_item_number_padding_top"
        android:textSize="@dimen/base_textsize" />

    <TextView
        android:id="@+id/item_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/collect_item_frequency_margin_start"
        android:duplicateParentState="true"
        android:paddingTop="@dimen/collect_item_frequency_padding_top"
        android:textSize="@dimen/base_textsize" />

    <TextView
        android:id="@+id/item_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/collect_item_unit_margin_start"
        android:duplicateParentState="true"
        android:paddingTop="@dimen/collect_item_unit_padding_top"
        android:textSize="@dimen/base_textsize" />

    <ImageView
        android:id="@+id/item_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/collect_item_delete_margin_start"
        android:duplicateParentState="true"
        android:paddingLeft="@dimen/collect_item_delete_padding_left"
        android:paddingRight="@dimen/collect_item_delete_padding_right" />

</RelativeLayout>