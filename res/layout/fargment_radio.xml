<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fragment_radio_padding_left" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_radio" >

        <com.semisky.jlradio.view.CollectStar
            android:id="@+id/iv_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fragment_radio_iv_collected_margin_start"
            android:paddingBottom="@dimen/fragment_radio_iv_collected_padding_bottom"
            android:src="@drawable/radio_listbtn_collected_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fragment_radio_tv_type_margin_start"
            android:text="@string/fm"
            android:textColor="@color/text_normal_color"
            android:textSize="@dimen/fragment_radio_tv_type_textsize" />

        <TextView
            android:id="@+id/tv_frequecy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/fragment_radio_tv_frequency_margin_start"
            android:textColor="@color/text_normal_color"
            android:textSize="@dimen/fragment_radio_tv_frequency_textsize" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/fragment_radio_tv_unit_margin_end"
            android:textColor="@color/text_normal_color"
            android:textSize="@dimen/fragment_radio_tv_unit_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_radio_linear_button_height"
        android:layout_marginTop="@dimen/fragment_radio_linear_button_margin_top"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_last_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_last_radio_selector"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btn_sub_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_radio_btn_sub_channel_margin_start"
            android:src="@drawable/btn_sub_channel_selector"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btn_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_radio_btn_collect_margin_start"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btn_plus_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_radio_btn_plus_channel_margin_start"
            android:src="@drawable/btn_plus_channel_selector"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/btn_next_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_radio_btn_next_radio_margin_start"
            android:src="@drawable/btn_next_radio_selector"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>